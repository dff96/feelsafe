<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="faustina.app.database">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone1"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/name1"
        android:layout_toRightOf="@+id/name1"
        android:layout_toEndOf="@+id/name1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name2"
        android:layout_below="@+id/name1"
        android:layout_toLeftOf="@+id/phone1"
        android:layout_toStartOf="@+id/phone1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone2"
        android:layout_below="@+id/name1"
        android:layout_toRightOf="@+id/name1"
        android:layout_toEndOf="@+id/name1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name3"
        android:layout_below="@+id/name2"
        android:layout_toLeftOf="@+id/phone2"
        android:layout_toStartOf="@+id/phone2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone3"
        android:layout_alignTop="@+id/name3"
        android:layout_alignLeft="@+id/phone2"
        android:layout_alignStart="@+id/phone2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add contacts"
        android:id="@+id/save"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show contacts"
        android:id="@+id/show"
        android:layout_alignTop="@+id/save"
        android:layout_toRightOf="@+id/name3"
        android:layout_toEndOf="@+id/name3" />
</RelativeLayout>
